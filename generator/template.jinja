<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/static/styles/colors.css" />
    <link rel="stylesheet" href="/static/styles/global.css" />
    <link rel="stylesheet" href="/static/styles/code.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>notes: {{title}}</title>
  </head>

  <body>
     <nav>
      <div>
        <a href="/">
          <img src="/static/icon/icon.png" alt="notes" height="100">
        </a>
      </div>
      
      {% if piblings != None %}
      <div>
        <ul>
        {% for pibling in piblings %}
          <li>
            {% if pibling == parent %}
            <a href="/{{sanitize_url(pibling)|e}}" class="activated-link">{{pibling}}</a>
            {% else %}
            <a href="/{{sanitize_url(pibling)|e}}">{{pibling}}</a>
            {%endif%}
          </li>
        {% endfor %}
        </ul>
      </div>
      {% endif %}

      {% if siblings != None %}
      <div>
        <ul>
        {% for sibling in siblings %}
          <li>
            {% if sibling == title %}
            <a href="/{{sanitize_url(sibling)|e}}" class="activated-link">{{sibling}}</a>
            {% else %}
            <a href="/{{sanitize_url(sibling)|e}}">{{sibling}}</a>
            {%endif%}
          </li>
        {% endfor %}
        </ul>
      </div>
      {% endif %}

      {% if children != None and len(children) > 0 %}
      <div>
        <ul>
        {% for child in children %}
          <li>
            <a href="/{{sanitize_url(child)|e}}">{{child}}</a>
          </li>
        {% endfor %}
        </ul>
      </div>
      {% endif %}

    </nav>
    <main>
      <header>
        <h1>{{title}}</h1>
      </header>
      <article>{{body}}</article>
      
      {% if len(backlinks) > 0 %}
      <p><span class="bold">Incoming:</span>
        {% for backlink in backlinks %}
        <a href="/{{sanitize_url(backlink)|e}}">{{backlink}}</a>
        {% endfor %}
      </p>
      {% endif %}

      {% if children != None%}
        {% for child in children %}
        <h2><a href="/{{sanitize_url(child)|e}}">{{child}}</a></h2>
        {% endfor %}
      {% endif %}


    </main>

  </body>
</html>
