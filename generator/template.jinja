<!DOCTYPE html>
<html lang='en'>
  <head>
    <link rel='stylesheet' href='/static/styles/colors.css' />
    <link rel='stylesheet' href='/static/styles/global.css' />
    <link rel='stylesheet' href='/static/styles/code.css' />
  </head>

  <body>

     <nav>

      <div>
        <a href='index.html'>
          <img src='/static/icon/icon.png' alt='notes' height='100'>
        </a>
      </div>
      
      {% if piblings != None %}
      <div>
        <ul>
        {% for pibling in piblings %}
          <li>
            {% if pibling == parent %}
            <a href='/{{pibling}}.html' class='activated-link'>{{pibling}}</a>
            {% else %}
            <a href='/{{pibling}}.html'>{{pibling}}</a>
            {%endif%}
          </li>
        {% endfor %}
        </ul>
      </div>
      {% endif %}

      {% if siblings != None %}
      <div>
        <ul>
        {% for sibling in siblings %}
          <li>
            {% if sibling == title %}
            <a href='/{{sibling}}.html' class='activated-link'>{{sibling}}</a>
            {% else %}
            <a href='/{{sibling}}.html'>{{sibling}}</a>
            {%endif%}
          </li>
        {% endfor %}
        </ul>
      </div>
      {% endif %}

      <div>
        <ul>
        {% for child in children %}
          <li>
            <a href='/{{child}}.html'>{{child}}</a>
          </li>
        {% endfor %}
        </ul>
      </div>
    </nav>
    <main>
      <header>
        <h1>{{title}}</h1>
      </header>
      <article>{{body}}</article>
    </main>

  </body>
</html>
